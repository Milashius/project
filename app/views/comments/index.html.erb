<p id="notice"><%= notice %></p>
<h1>Commments</h1>


<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.description %></td>
        <td><%= comment.author %></td>
        <td> <%= link_to 'Show', idea_comments_path(@idea, comment) %></td>
        <td><%= link_to 'New Comment', edit_idea_comment_path(@idea, comment) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Comment', new_idea_comment_path(@idea) %>
